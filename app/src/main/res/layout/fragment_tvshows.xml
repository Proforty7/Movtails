<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.welcome.movtails.Fragments.TVShowsFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/visibility_layout"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="cursive"
                    android:text="Airing Today"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="28dp"
                    android:textStyle="bold|italic" />

                <android.support.v7.widget.CardView
                    android:id="@+id/airing_today_tv_shows_see_more"
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:elevation="280dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="See More.."
                        android:textColor="@android:color/background_light"
                        android:textSize="14dp" />

                </android.support.v7.widget.CardView>

            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/airing_today_tv_shows_recycler_view"
                android:layout_width="match_parent"
                android:padding="2dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:visibility="visible" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="cursive"
                    android:text="Popular"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="28dp"
                    android:textStyle="bold|italic" />

                <android.support.v7.widget.CardView
                    android:id="@+id/popular_tv_shows_see_more"
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:elevation="280dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="See More.."
                        android:textColor="@android:color/background_light"
                        android:textSize="14dp" />

                </android.support.v7.widget.CardView>

            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/popular_tv_shows_recycler_view"
                android:layout_width="match_parent"
                android:padding="2dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:visibility="visible" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Top Rated"
                    android:fontFamily="cursive"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="28dp"
                    android:textStyle="bold|italic"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/top_rated_tv_shows_see_more"
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:elevation="280dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="See More.."
                        android:textColor="@android:color/background_light"
                        android:textSize="14dp" />

                </android.support.v7.widget.CardView>

            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/top_rated_tv_shows_recycler_view"
                android:layout_width="match_parent"
                android:padding="2dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:visibility="visible" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="On The Air"
                    android:fontFamily="cursive"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="28dp"
                    android:textStyle="bold|italic"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/on_the_air_tv_shows_see_more"
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:elevation="280dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="See More.."
                        android:textColor="@android:color/background_light"
                        android:textSize="14dp" />

                </android.support.v7.widget.CardView>

            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/on_the_air_tv_shows_recycler_view"
                android:layout_width="match_parent"
                android:padding="2dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:visibility="visible" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <com.wang.avi.AVLoadingIndicatorView
        android:layout_gravity="center"
        android:id="@+id/avi_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorName="BallClipRotateIndicator"
        android:visibility="visible"
        app:indicatorColor="@android:color/black"
        style="@style/AVLoadingIndicatorView.Large"
        />

</FrameLayout>
