<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.welcome.movtails.AboutActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="200dp"
        app:cardCornerRadius="8dp"
        android:backgroundTint="@color/cardview_dark_background"
        >

        <TextView
            android:textColor="@color/cardview_light_background"
            android:text="This app helps user to fetch information about latest, top rated, popular and various other kinds of movies and tv shows."
            android:layout_width="match_parent"
            android:padding="6dp"
            android:textSize="18dp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="200dp"
        app:cardCornerRadius="8dp"
        android:backgroundTint="@color/cardview_dark_background"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textAlignment="center"
            android:padding="6dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_light"
            android:text="Created By $h@dow King \nBeta Version"/>

</android.support.v7.widget.CardView>
</LinearLayout>
